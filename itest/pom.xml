<?xml version='1.0' encoding='UTF-8' ?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.ops4j.pax.cdi</groupId>
        <artifactId>pax-cdi-parent</artifactId>
        <version>0.11.0</version>
        <relativePath>../pax-cdi-parent</relativePath>
    </parent>

    <groupId>org.ops4j.pax.cdi</groupId>
    <artifactId>itest</artifactId>
    <packaging>pom</packaging>

    <name>OPS4J Pax CDI Integration Tests</name>

    <profiles>

        <profile>
            <id>matrix</id>
            <modules>
                <module>src/it/itest-cdi10</module>
                <module>src/it/itest-karaf</module>
                <module>src/it/itest-osgi6</module>
            </modules>
        </profile>

        <profile>
            <id>invoker</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-invoker-plugin</artifactId>
                        <version>1.8</version>
                        <configuration>
                            <streamLogs>true</streamLogs>
                        </configuration>
                        <executions>
                            <execution>
                                <id>equinox-owb1</id>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <profiles>
                                        <profile>equinox</profile>
                                        <profile>owb1</profile>
                                    </profiles>
                                    <cloneProjectsTo>${project.build.directory}/equinox-owb1</cloneProjectsTo>
                                </configuration>
                            </execution>
                            <execution>
                                <id>equinox-weld1</id>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <profiles>
                                        <profile>equinox</profile>
                                        <profile>weld1</profile>
                                    </profiles>
                                    <cloneProjectsTo>${project.build.directory}/equinox-weld1</cloneProjectsTo>
                                    <pomExcludes>
                                        <pomExclude>itest-karaf/pom.xml</pomExclude>
                                    </pomExcludes>
                                </configuration>
                            </execution>
                            <execution>
                                <id>equinox-weld2</id>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <profiles>
                                        <profile>equinox</profile>
                                        <profile>weld2</profile>
                                    </profiles>
                                    <cloneProjectsTo>${project.build.directory}/equinox-weld2</cloneProjectsTo>
                                    <pomExcludes>
                                        <pomExclude>itest-karaf/pom.xml</pomExclude>
                                    </pomExcludes>
                                </configuration>
                            </execution>
                            <execution>
                                <id>felix-owb1</id>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <profiles>
                                        <profile>felix</profile>
                                        <profile>owb1</profile>
                                    </profiles>
                                    <cloneProjectsTo>${project.build.directory}/felix-owb1</cloneProjectsTo>
                                    <pomExcludes>
                                        <pomExclude>itest-osgi6/pom.xml</pomExclude>
                                    </pomExcludes>
                                </configuration>
                            </execution>
                            <execution>
                                <id>felix-weld1</id>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <profiles>
                                        <profile>felix</profile>
                                        <profile>weld1</profile>
                                    </profiles>
                                    <cloneProjectsTo>${project.build.directory}/felix-weld1</cloneProjectsTo>
                                    <pomExcludes>
                                        <pomExclude>itest-karaf/pom.xml</pomExclude>
                                        <pomExclude>itest-osgi6/pom.xml</pomExclude>
                                    </pomExcludes>
                                </configuration>
                            </execution>
                            <execution>
                                <id>felix-weld2</id>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <profiles>
                                        <profile>felix</profile>
                                        <profile>weld2</profile>
                                    </profiles>
                                    <cloneProjectsTo>${project.build.directory}/felix-weld2</cloneProjectsTo>
                                    <pomExcludes>
                                        <pomExclude>itest-karaf/pom.xml</pomExclude>
                                        <pomExclude>itest-osgi6/pom.xml</pomExclude>
                                    </pomExcludes>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>

        </profile>
    </profiles>
</project>
